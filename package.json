{
  "name": "rollup-typescript-lib-starter",
  "version": "0.1.0",
  "description": "start rollup typescript lib",
  "main": "dist/lib/index.js",
  "amd": "dist/index.js",
  "cjs": "dist/index.cjs.js",
  "esm": "dist/index.esm.js",
  "iife": "dist/index.iife.js",
  "umd": "dist/index.umd.js",
  "umdMin": "dist/index.umd.min.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && cross-env NODE_ENV=production rollup -c ./config/rollup.config.prod.ts && typedoc --out docs src",
    "dev": "tsc --module commonjs && cross-env NODE_ENV=development rollup -c ./config/rollup.config.dev.ts --watch",
    "lint": "eslint src --fix --ext .ts,.tsx,.js,.jsx",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqxs/rollup-typescript-lib-starter.git"
  },
  "keywords": [
    "rollup",
    "typescript",
    "lib"
  ],
  "author": "ShineShao <xiaoshaoqq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qqxs/rollup-typescript-lib-starter/issues"
  },
  "homepage": "https://github.com/qqxs/rollup-typescript-lib-starter#readme",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts,tsx,jsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-buble": "^1.0.1",
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-eslint": "^9.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.2.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "husky": "^7.0.2",
    "jest": "^29.3.1",
    "jest-config": "^29.3.1",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-serve": "^2.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "rxjs": "^6.6.3"
  },
  "engines": {
    "node": ">=10.16"
  },
  "files": [
    "dist/lib/index.js",
    "dist/types",
    "src"
  ]
}
