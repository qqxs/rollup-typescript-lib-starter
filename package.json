{
  "name": "rollup-typescript-lib-starter",
  "version": "0.4.0",
  "description": "start rollup typescript develop javascript lib",
  "main": "dist/index.js",
  "esm": "dist/index.esm.js",
  "amd": "dist/index.amd.js",
  "iife": "dist/index.iife.js",
  "umd": "dist/index.umd.js",
  "umdMin": "dist/index.umd.min.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production rollup -c ./config/rollup.config.prod.ts --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs && npm run copy",
    "dev": "cross-env NODE_ENV=development rollup -c ./config/rollup.config.dev.ts --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs --watch",
    "docs": "rimraf docs && typedoc --out docs src",
    "analyzer": "cross-env ANALYZER=true npm run build",
    "lint": "eslint src --fix --ext .ts,.tsx,.js,.jsx",
    "fmt": "prettier --write \"{src,__tests__,config}/**/*.{ts,tsx,js,jsx}\"",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "clean": "rimraf docs dist coverage",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "copy": "gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqxs/rollup-typescript-lib-starter.git"
  },
  "keywords": [
    "rollup",
    "typescript",
    "lib"
  ],
  "author": "ShineShao <xiaoshaoqq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qqxs/rollup-typescript-lib-starter/issues"
  },
  "homepage": "https://github.com/qqxs/rollup-typescript-lib-starter#readme",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/docs/",
      "/coverage/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts,tsx,jsx}"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^15.2.2",
    "@rollup/plugin-replace": "^5.0.3",
    "@rollup/plugin-strip": "^3.0.3",
    "@rollup/plugin-swc": "^0.2.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@skax/camel": "^0.2.5",
    "@swc/core": "^1.3.92",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.5",
    "@types/mime": "^3.0.1",
    "@types/node": "^18.15.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-xx": "^1.2.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "only-allow": "^1.2.1",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.0.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-visualizer": "^5.9.2",
    "through2": "^4.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist"
  ]
}
