{
  "name": "rollup-typescript-lib-starter",
  "version": "0.3.2",
  "description": "start rollup typescript lib",
  "main": "dist/lib/index.js",
  "amd": "dist/index.js",
  "cjs": "dist/index.cjs.js",
  "esm": "dist/index.esm.js",
  "iife": "dist/index.iife.js",
  "umd": "dist/index.umd.js",
  "umdMin": "dist/index.umd.min.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production rollup -c ./config/rollup.config.prod.ts --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs && npm run docs",
    "dev": "tsc --module commonjs && cross-env NODE_ENV=development rollup -c ./config/rollup.config.dev.ts --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs --watch",
    "docs": "rimraf docs && typedoc --out docs src",
    "lint": "eslint src --fix --ext .ts,.tsx,.js,.jsx",
    "fmt": "prettier --write \"{src,__tests__,config}/**/*.{ts,tsx,js,jsx}\"",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqxs/rollup-typescript-lib-starter.git"
  },
  "keywords": [
    "rollup",
    "typescript",
    "lib"
  ],
  "author": "ShineShao <xiaoshaoqq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qqxs/rollup-typescript-lib-starter/issues"
  },
  "homepage": "https://github.com/qqxs/rollup-typescript-lib-starter#readme",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts,tsx,jsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-buble": "^1.0.2",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-eslint": "^9.0.3",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-strip": "^3.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.0",
    "@types/mime": "^3.0.1",
    "@types/node": "^18.15.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-xx": "^1.1.5",
    "husky": "^7.0.4",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "only-allow": "^1.1.1",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^3.20.2",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.24.6",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "rxjs": "^7.8.0"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/lib/index.js",
    "dist/types",
    "src"
  ]
}
